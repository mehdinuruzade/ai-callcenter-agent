# Database (SQLite for development - easy setup!)
# For production, use PostgreSQL: "postgresql://user:password@localhost:5432/callcenter?schema=public"
DATABASE_URL="file:./dev.db"

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_twilio_number

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Pinecone (for RAG)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=callcenter-rag

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Admin Default Credentials (change after first login)
DEFAULT_ADMIN_EMAIL=admin@callcenter.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!
